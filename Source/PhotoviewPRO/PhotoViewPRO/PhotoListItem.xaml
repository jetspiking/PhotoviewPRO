<UserControl x:Class="PhotoViewPRO.PhotoListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhotoViewPRO"
             mc:Ignorable="d" 
             Height="40" Background="Transparent">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5,5,5,5" >
        <Image x:Name="Thumbnail" Width="32" Height="32" />
        <Label x:Name="Name" Content="Name" VerticalAlignment="Center"/>
    </StackPanel>
</UserControl>
